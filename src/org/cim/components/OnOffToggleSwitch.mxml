<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="100" height="24" click="toggleSwitch()"  >
	
	<fx:Script>
		<![CDATA[
			
			/**
			 * Toggles the current state between Off and On.
			 */
			private function toggleSwitch():void {
				if(currentState == "Off") {
					currentState = "On";
				} else {
					currentState = "Off";
				}
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:State name="Off" />
		<s:State name="On" />
	</fx:Declarations>
	
	<mx:Image source="assets/images/slidingButtonBackground.png" width="63" height="24" smoothBitmapContent="true" />
	
	<mx:Image id="slidingButton" source="assets/images/slidingButton.png" height="24" x.Off="1" x.On="32" y="0" smoothBitmapContent="true" />
	<!--<mx:Image id="slidingButton" source="assets/images/slidingButton.png" height="20" x.Off="2" x.On="36" y="2" smoothBitmapContent="true" />-->
	
</s:Group>
