<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx" 
				   width="300" height="400" borderColor="0x999999"
				   borderStyle="solid" borderWeight="1" cornerRadius="4"
				   creationComplete="finish()">
	
	<fx:Metadata>
		[DefaultProperty("content")]
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			/**
			 * The title of this panel.
			 */
			public var title:String;
			
			[Bindable]
			/**
			 * Whether or not the title should be shown.
			 */
			public var titleVisible:Boolean = true;
			
			/**
			 * A list of children to have in the component.
			 */
			private var _content:Array;
			
			/**
			 * Set the children of the panel.
			 */
			public function set content(newValue:Array):void {
				_content = newValue;
			}
			
			/**
			 * Get the children of the panel
			 */
			public function get content():Array {
				return _content;
			}
			
			/**
			 * Handles the creation of the panel completing.
			 * Adds all the items in content to the panel.
			 */
			private function finish():void {
				// don't bother if there's nothing to add
				if( _content == null ) {
					return;
				}
				
				// loop through all children and add them
				for each(var element:* in _content) {
					this.addElement(element);
				}
			}
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:layout>
		<s:VerticalLayout gap="0" paddingTop="-1" paddingLeft="-1" paddingRight="-1" 
						  verticalAlign="top" horizontalAlign="center" />
	</s:layout>
	
	<!-- Title Bar -->
	<s:BorderContainer width="100%" height="54" borderColor="0x999999" 
					   borderStyle="solid" borderWeight="1" cornerRadius="4" 
					   visible="{titleVisible}" includeInLayout="{titleVisible}">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle" horizontalAlign="center" />
		</s:layout>
		
		<s:Label text="{title}" styleName="header" />
	</s:BorderContainer>
	
</s:BorderContainer>
