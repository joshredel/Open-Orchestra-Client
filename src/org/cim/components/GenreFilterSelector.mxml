<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 width="100%" height="30" click="changeGenre()" 
		 creationComplete="finish()">
	
	<fx:Script>
		<![CDATA[
			import mx.binding.utils.ChangeWatcher;
			
			import org.cim.DataShop;
			import org.cim.vo.Genre;
			
			[Bindable]
			/**
			 * The app's data shop.
			 */
			private var dataShop:DataShop = DataShop.instance;
			
			/**
			 * Handles the completion of the creation of the renderer.
			 * Listens for changes to the genre so we can redraw.
			 */
			private function finish():void {
				ChangeWatcher.watch(dataShop, "currentGenre", forceRefresh);
			}
			
			/**
			 * Handles a change in the current genre.
			 * Refreshes the list so the bolding is updated immediately.
			 */
			private function forceRefresh(event:Event):void {
				nameLabel.setStyle("fontWeight", checkForCurrent(data as Genre));
			}
			
			/**
			 * Checks to see if this item is the current genre,
			 * and if so returns "bold" so that the label stands out.
			 */
			private function checkForCurrent(genre:Genre):String {
				if(dataShop.currentGenre) {
					if(genre.id == dataShop.currentGenre.id) {
						return "bold";
					} else {
						return "normal";
					}
				} else {
					return "normal";
				}
			}
			
			/**
			 * Changes the current genre to the value of this item renderer.
			 */
			private function changeGenre():void {
				dataShop.currentGenre = data as Genre;
			}
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:layout>
		<s:HorizontalLayout verticalAlign="middle" horizontalAlign="left" />
	</s:layout>
	
	<s:Label id="nameLabel" text="{data.genreName}" fontWeight="{checkForCurrent(data as Genre)}"  />
</s:ItemRenderer>
